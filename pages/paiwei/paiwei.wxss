.inform{
    display: flex;
    justify-content: flex-start;
    width: 90%;
    margin:0 auto;
    background: #e1e1ff;
    border-radius: 20rpx;
    padding: 10rpx 0 0 20rpx;
    position: relative;
}
.inform .left image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

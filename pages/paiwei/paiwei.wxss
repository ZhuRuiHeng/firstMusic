/* 弹窗 */
.bg{
 width: 100%;
   height: 100vh;
   background: rgba(0, 0, 0, 0.6);
   overflow: hidden;
   position:fixed; /* static */
   top: 0;
   left: 0;
   z-index: 3;
 }
 .zindex{
   width: 60%;
   background: #fff;
   margin: 0 auto;
   position: absolute;
   text-align: center;
   border-radius: 20rpx;
   z-index: 6;
   height: 280rpx;
   top: 50%; 
   left: 50%;  
   -webkit-transform: translate(-50%,-50%);  
   -ms-transform: translate(-50%,-50%);  
   transform: translate(-50%,-50%);
   font-size: 32rpx;
 }
 .zindex .title {
    padding: 30rpx;
 }
 .zindex .title image{
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
    position: relative;
    top: -4rpx;
    left: 6rpx;
    margin-right: 6rpx;
 }
 .zindex .think{
    border-top: 1px solid #f7f7f7;
    display: flex;
    text-align: center; 
    color: #655bce;
 }
 .zindex .think view{
     flex:1;
     padding:20rpx;
 }
 .zindex .think .one{
     border-right: 1px solid #f7f7f7;
 }
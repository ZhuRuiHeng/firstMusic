<!--pages/share/share.wxml-->
<view class='container'>
    <view class='img'>
      <image src="{{imgUrl}}" mode='widthFix'></image>
    </view>
    <view class='button'>
          <button wx:if="{{otherMid}}" class='one' bindtap='backHome'>我也要玩</button>
          <button wx:if="{{!otherMid}}" class='one' open-type='share'>邀请好友来猜</button>
          <button wx:if="{{!otherMid}}" class='two' bindtap='savePoster'>保存朋友圈海报</button>
          
    </view>
    <view class='back' bindtap='backHome'>返回首页</view>
</view>

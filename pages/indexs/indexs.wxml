<!--index.wxml-->
<view class="container">
    <!-- morePlay -->
    <view class='morePlay'>
        <view class='one'>
            <view class='paiwei' bindtap='paiwei'>
                <image src='http://ovhvevt35.bkt.clouddn.com/music/one.png' mode='widthFix'></image>
            </view>
            <view class='friends'>
                <button open-type='share'>
                    <image src='http://ovhvevt35.bkt.clouddn.com/music/two.png' mode='widthFix'></image>
                </button>
            </view>
        </view>
        <view class='two'>
            <view class='people' bindtap='people'>
                <image src='http://ovhvevt35.bkt.clouddn.com/music/p1.png' mode='widthFix'></image>
            </view>
        </view>
        <view class='two' bindtap='morePlay'>
            <view class='more'>
                <image src='http://ovhvevt35.bkt.clouddn.com/music/four.png' mode='widthFix'></image>
            </view>
        </view>
    </view>
    <!--ranking  -->
    <view class='see' bindtap='ranking'>
        <image src="../image/pai-hover.png" mode="widthFix"></image>
        查看排行榜
        <image src="../image/next.png" mode="widthFix"></image>
    </view>
    <!-- inform -->
    <view class='inform'>
        <view class="left">
            <image src='{{userInfo.avatarUrl}}' mode='widthFix'></image>
        </view>
        <view class="right">
            <view class="niceName">{{userInfo.nickName}}</view>
            <view class="group">
                    Lv.{{point.level}} 
                <!-- <view class="line">
                    <view class="finish" style='width:{{width}}rpx'></view>
                </view> -->
                <view class="gold">
                    <image src="http://ovhvevt35.bkt.clouddn.com/chengyu/8.png" mode="widthFix"></image>{{point.gold}}
                </view>
            </view>
        </view>
    </view>
</view>
